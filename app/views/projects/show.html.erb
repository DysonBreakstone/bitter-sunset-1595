<h1><%= @project.name %></h1>
<%= "Material: #{@project.material}" %><br/>
<%= "Challenge Theme: #{@project.challenge.theme}" %><br/>
<%= "Number of Contestants: #{@project.how_many_contestants}" %><br/>
<%= "Average Contestant Experience: #{@project.contestant_experience}" %>
<%= form_with url: "/contestant_projects?project=#{@project.id}", method: :post, local:true do |form| %>
<%= "Add a contestant to this project: (enter id#)" %>
<%= form.label :contestant_id %>
<%= form.number_field :contestant_id %>
<%= form.submit "Add Contestant to Project" %>
<% end %>